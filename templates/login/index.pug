extends ../layout.pug

block content
    .container.mt-5
        .row.justify-content-center
            .col-md-6
                h1 Connexion
                if error
                    .alert.alert-danger #{error}
                form(action="/login" method="post")
                    input(type="hidden" name="csrf" value=csrf)        
                    .form-group
                        label(for='email') Email :
                        input.form-control(type='text', name="email", value= user.email, placeholder='Votre email')

                    .form-group
                        label(for='password') Mot de passe :
                        input.form-control(type='password', name="password", id='password', placeholder='Votre mot de passe')

                    button.mt-2.mb-2.btn.btn-primary(type='submit') Se connecter